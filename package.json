{
  "name": "gemini-whisper",
  "version": "1.0.0",
  "description": "Background Electron app: mic hotkey, Gemini transcription, auto-paste.",
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "dotenv": "^16.4.5",
    "electron-store": "^8.1.0",
    "mic": "^2.1.1"
  },
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^24.6.0",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.geminiwhisper.app",
    "productName": "GeminiWhisper",
    "win": {
      "icon": "icon.ico",
      "target": "nsis"
    },
    "files": [
      "**/*",
      "!node_modules/.cache"
    ],
    "extraResources": [
      {
        "from": "bin/sox/",
        "to": "bin/sox"
      }
    ]
  }
}
